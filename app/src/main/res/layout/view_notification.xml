<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/person_male"
        android:padding="5dp"
        android:id="@+id/userProfileImage"
        />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Codia"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/userProfileImage"
        app:layout_constraintStart_toEndOf="@+id/userProfileImage"
        app:layout_constraintTop_toTopOf="@+id/userProfileImage" />

    <TextView
        android:id="@+id/tvNotificationType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="liked your post"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvUserName"
        app:layout_constraintStart_toEndOf="@+id/tvUserName"
        app:layout_constraintTop_toTopOf="@+id/tvUserName" />

    <TextView
        android:id="@+id/tvNotificationTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="53m"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNotificationType"
        app:layout_constraintStart_toEndOf="@+id/tvNotificationType"
        app:layout_constraintTop_toTopOf="@+id/tvNotificationType" />

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvNotificationTimestamp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNotificationTimestamp"
        app:srcCompat="@drawable/person_female" />


</androidx.constraintlayout.widget.ConstraintLayout>